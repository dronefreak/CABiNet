{
    "dataset_config":
    {
        "name": "cityscapes",
        "dataset_config_file": "./cityscapes_info.json",
        "num_classes": 19,
        "cropsize": [1024, 1024],
        "dataset_path": "./citys",
        "ignore_idx": 255,
        "shuffle": true
    },
    "training_config":
    {
        "batch_size": 1,
        "num_workers": 4,
        "gpu_id": 0,
        "mode": "train",
        "optimizer_momentum": 0.9,
        "optimizer_weight_decay": 5e-4,
        "optimizer_lr_start": 5e-3,
        "optimizer_power": 0.9,
        "warmup_stemps": 2000,
        "warmup_start_lr": 1e-5,
        "max_iterations": 10000,
        "msg_iterations": 100,
        "experiments_path": "./cabinet_experiments",
        "model_save_name": "cabinet_citys_1024x1024.pth"
    },
    "validation_config":
    {
        "batch_size": 1,
        "eval_scales": [0.5, 0.75, 1, 1.25, 1.5, 1.75],
        "mode": "val",
        "validation_output_folder": "./cabinet_experiments/results",
        "flip": true
    }
}